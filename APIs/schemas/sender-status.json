{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "description": "Status of Sender",
  "required": [
    "state"
  ],
  "properties": {
    "state": {
      "type": "string",
      "enum": [
        "unconstrained",
        "constrained",
        "active_constraints_violation",
        "no_stream",
        "awaiting_stream"
      ]
    }
  }
}
