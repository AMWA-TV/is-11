{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "frame_width",
    "frame_height",
    "frame_rate"
  ],
  "properties": {
    "frame_width": {
      "type": "integer"
    },
    "frame_height": {
      "type": "integer"
    },
    "frame_rate": {
      "description": "Frame rate in Hz",
      "type": "object",
      "required" : [
        "numerator"
      ],
      "properties" : {
        "numerator" : {
          "description" : "Numerator",
          "type" : "integer"
        },
        "denominator" : {
          "description" : "Denominator",
          "type" : "integer",
          "default" : 1
        }
      }
    }
  }
}
